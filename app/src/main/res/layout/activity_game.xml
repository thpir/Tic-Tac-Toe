<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tictactoebackground2small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollerRules"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/infoBar3x3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp">

                    <TextView
                        android:id="@+id/text_view_p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/soupofjustice"
                        android:freezesText="true"
                        android:text="@string/player_1_x"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/text_view_p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_view_p1"
                        android:layout_marginStart="5sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/soupofjustice"
                        android:freezesText="true"
                        android:text="@string/player_2_o"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/resetButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="33dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:fontFamily="@font/soupofjustice"
                        android:text="@string/reset"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <GridLayout
                    android:id="@+id/playField3x3"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:layout_below="@+id/infoBar3x3"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent">

                    <Button
                        android:id="@+id/button_00"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_01"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_02"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_10"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_11"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_12"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_20"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_21"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                    <Button
                        android:id="@+id/button_22"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:fontFamily="@font/soupofjustice"
                        android:text=""
                        android:textSize="60sp" />

                </GridLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/fireworks" />

</RelativeLayout>